<div class="container">
  <h1>Posts index page</h1>
  <table>
    <thead>
      <tr>
        <th>Text</th>
        <th colspan="2">some Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.text, post_path(post), class:"break" %></td>
          <td><%= link_to "Edit",edit_post_path(post),class:"btn btn-outline-primary mx-1 my-1" %></td>
          <td><%= link_to "Delete",post_path(post), method: :delete, class:"btn btn-outline-primary"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
